<Window x:Class="SupperChat.MVVM.View.AddFriendOrGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SupperChat.MVVM.ViewModel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="添加好友/群聊" Height="300" Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- 顶部 Tab -->
        <TabControl SelectedIndex="{Binding SelectedTab}">
            <TabItem Header="找好友">
                <StackPanel Margin="20">
                    <TextBox Text="{Binding SearchText}" Width="300" Height="30" 
                             materialDesign:HintAssist.Hint="请输入用户名" />

                    <Button Content="查找" Width="100" Height="30" Margin="10" 
                            Command="{Binding SearchFriendCommand}" />
                </StackPanel>
            </TabItem>
            <TabItem Header="找群">
                <StackPanel Margin="20">
                    <TextBox Text="{Binding SearchText}" 
                             Width="300" Height="30" 
                             materialDesign:HintAssist.Hint="请输入群聊名"/>
                    <Button Content="查找" Width="100" Height="30" Margin="10" 
                            Command="{Binding SearchGroupCommand}" />
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
