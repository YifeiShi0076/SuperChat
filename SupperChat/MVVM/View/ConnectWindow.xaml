<Window x:Class="SupperChat.MVVM.View.ConnectWindow"  
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
       xmlns:local="clr-namespace:SupperChat.MVVM.View"  
       mc:Ignorable="d"  
       Title="连接目标Redis服务器" Height="250" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Replace PlaceholderText with a ToolTip for compatibility -->
        <TextBox Grid.Row="0" Margin="0,10,0,10"  
                Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}"  
                ToolTip="输入服务器地址（例如127.0.0.1）" />
        <TextBox Grid.Row="1" Margin="0,10,0,10"  
                Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"  
                ToolTip="输入端口号（例如6379）" />
        <Button Grid.Row="2" Margin="0,10,0,0"  
               Content="连接" Command="{Binding ConnectCommand}" />
    </Grid>
</Window>
