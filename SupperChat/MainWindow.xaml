<Window x:Class="SupperChat.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:svg="http://sharpvectors.codeplex.com/svg"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:SupperChat" xmlns:viewmodel="clr-namespace:SupperChat.MVVM.ViewModel"
      mc:Ignorable="d"
      Title="Supper Chat" 
      Background="White"
      Height="650" Width="1200"
      WindowStyle="None"
      AllowsTransparency="True"
      ResizeMode="CanResizeWithGrip">

  <Window.DataContext>
      <viewmodel:MainViewModel/>
  </Window.DataContext>
  <Grid>
      <Grid.RowDefinitions>
          <RowDefinition Height="25"/>
          <RowDefinition/>
      </Grid.RowDefinitions>

      <Grid.ColumnDefinitions>
          <ColumnDefinition Width="200"/>
          <ColumnDefinition/>
      </Grid.ColumnDefinitions>


      <Border Grid.ColumnSpan="2"
              Background="White"
              MouseDown="Border_MouseDown">

          <Grid HorizontalAlignment="Stretch">
              <Label Content="SupperChat"
                     Foreground="Gray"
                     FontWeight="SemiBold"/>

              <StackPanel HorizontalAlignment="Right"
                          Orientation="Horizontal">

                   <Button Width="20" Height="20"
                           Content="🗕"
                           Background="Transparent"
                           BorderThickness="0"
                           Foreground="Gray"
                           FontWeight="Bold"
                           Margin="0,0,0,3"
                           Click="ButtonMinimize_Click"/>

                   <Button Width="20" Height="20"
                           Content="◼"
                           Background="Transparent"
                           BorderThickness="0"
                           Foreground="Gray"
                           FontWeight="Bold"
                           Click="ButtonMaximize_Click"/>

                   <Button Width="20" Height="20"
                          Content="✖"
                          Background="Transparent"
                          BorderThickness="0"
                          Foreground="Gray"
                          FontWeight="Bold"
                          Click="CloseButton_Click"/>
              </StackPanel>
          </Grid>
          
      </Border>
      
      <Grid Background="White"
          Grid.Row="1">
           <Grid.RowDefinitions>
               <RowDefinition Height="50"/>
               <RowDefinition/>
               <RowDefinition Height="60"/>
           </Grid.RowDefinitions>

           <Label Content="Contacts"
                  VerticalAlignment="Center"
                  FontWeight="Medium"
                  Foreground="Black"
                  Margin="20,0,0,0" Background="White"/>

            <ListView ItemsSource="{Binding Contacts}"
                      SelectedItem="{Binding SelectedContact}"
                      Background="White"
                      BorderThickness="0"
                      Grid.Row="1"
                      ItemContainerStyle="{StaticResource ContactCard}" SelectionChanged="ListView_SelectionChanged"/>


            <StackPanel Grid.Row="2"
                      Orientation="Horizontal"
                      Background="#FFE2E2E2"
                        Margin="5,5,5,5">


                <Ellipse Width="30" Height="30"
                         Margin="15,0,0,0">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Icons/TestPicture.png"
                                    Stretch="Uniform"
                                    RenderOptions.BitmapScalingMode="Fant"/>
                    </Ellipse.Fill>

                </Ellipse>

                <StackPanel VerticalAlignment="Center">
                    <Label Content="Username"
                           Foreground="Black"
                           FontWeight="SemiBold"
                           Margin="0,-5,-5,0"/>
                    <Label Content="Custom Status"
                           Foreground="Green"
                           FontSize="10"
                           Margin="0,-8,-5,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#2F3136"
                    BorderThickness="0,0,0,2">
                <Grid HorizontalAlignment="Stretch"
                      Margin="8">

                    <Label Content="@Username"
                           Foreground="Black"
                           FontWeight="Bold"
                           Margin="5,0,5,0"
                           VerticalAlignment="Center" Background="White"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Image Width="20" Height="20"
                               RenderOptions.BitmapScalingMode="Fant"
                               Margin="5,0,5,0"
                               Source="/Icons/phone.png"/>

                        <Image Width="20" Height="20"
                               RenderOptions.BitmapScalingMode="Fant"
                               Margin="5,0,5,0"
                               Source="/Icons/camera.png"/>       
                    </StackPanel>

                </Grid>
            </Border>

            <ListView ItemsSource="{Binding SelectedContact.Messages}"
                      Background="#FFE5E5E5"
                      BorderThickness="0"
                      ItemContainerStyle="{StaticResource ChatItem}"
                      Margin="8,0,0,0"
                      Grid.Row="1"/>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Row="1"
                         Height="50"
                         Text="Message @Username"
                         Style="{StaticResource MessageBox}"
                         Grid.ColumnSpan="2"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Grid.Column="1"
                            Margin="0,0,16,0">

                    <Image Source="/Icons/add.png"
                           Width="20" Height="20"
                           RenderOptions.BitmapScalingMode="Fant"
                           Margin="5,5,5,0"/>
                    
        
                    <Image Source="/Icons/send.png"
                           Width="20" Height="20"
                           RenderOptions.BitmapScalingMode="Fant"
                           Margin="5,5,16,0"/>           
                </StackPanel>
                            
            </Grid>

        </Grid>
  </Grid> 
</Window>
