<Window x:Class="SupperChat.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:svg="http://sharpvectors.codeplex.com/svg"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:SupperChat" xmlns:viewmodel="clr-namespace:SupperChat.MVVM.ViewModel"
      mc:Ignorable="d"
      Title="Supper Chat" 
      Background="White"
      Height="638" Width="959"
      WindowStyle="None"
      AllowsTransparency="True"
      ResizeMode="CanResizeWithGrip">

    <!-- <Window.DataContext> 
         <viewmodel:MainViewModel/>
    </Window.DataContext> -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="600*"/>
        </Grid.ColumnDefinitions>


        <Border Grid.ColumnSpan="3"
              Background="White"
              MouseDown="Border_MouseDown">

            <Grid HorizontalAlignment="Stretch">
                <Label Content="SupperChat"
                     Foreground="Gray"
                     FontWeight="SemiBold"/>

                <StackPanel HorizontalAlignment="Right"
                          Orientation="Horizontal">

                    <Button Width="20" Height="20"
                           Content="🗕"
                           Background="Transparent"
                           BorderThickness="0"
                           Foreground="Gray"
                           FontWeight="Bold"
                           Margin="0,0,0,3"
                           Click="ButtonMinimize_Click"/>

                    <Button Width="20" Height="20"
                           Content="◼"
                           Background="Transparent"
                           BorderThickness="0"
                           Foreground="Gray"
                           FontWeight="Bold"
                           Click="ButtonMaximize_Click"/>

                    <Button Width="20" Height="20"
                          Content="✖"
                          Background="Transparent"
                          BorderThickness="0"
                          Foreground="Gray"
                          FontWeight="Bold"
                          Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

        </Border>

        <Grid Background="White"
          Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Label Content="Contacts"
                  VerticalAlignment="Center"
                  FontWeight="Medium"
                  Foreground="Black"
                  Margin="20,0,0,0" Background="White"/>

            <ListView ItemsSource="{Binding Contacts}"
          SelectedItem="{Binding SelectedContact}"
          Background="White"
          BorderThickness="0"
          Grid.Row="1"
          ItemContainerStyle="{StaticResource ContactCard}"
          SelectionChanged="ListView_SelectionChanged">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 头像 -->
                            <Image Source="{Binding ImageSource}" Width="40" Height="40" Margin="5"/>

                            <!-- 用户名和最后消息 -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                <TextBlock Text="{Binding Username}" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text="{Binding LastMessage}" FontSize="12" Foreground="Gray" />
                            </StackPanel>

                            <!-- 小红点 -->
                            <Border Grid.Column="2"
                        Width="20" Height="20"
                        Background="Red"
                        CornerRadius="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding UnreadCount, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding UnreadCount}"
                               Foreground="White"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>


            <Button x:Name="AddButton" 
                    Content="➕"
                    Width="30" Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="10"
                    Background="#FFE5E5E5"
                    Foreground="White"
                    FontSize="15"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="AddButton_Click">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="加好友/加群" Command="{Binding OpenAddContactWindowCommand}" />
                        <MenuItem Header="创建群聊" Command="{Binding OpenCreateGroupWindowCommand}" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>


            <!-- 用户信息显示区 -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Background="#FFE2E2E2"
                        Margin="5,5,5,5">
                <Ellipse Width="30" Height="30"
                         Margin="15,0,0,0"
                         MouseLeftButtonUp="UserAvatar_Click">
                    <Ellipse.Fill>
                        <ImageBrush Stretch="UniformToFill">
                            <ImageBrush.ImageSource>
                                <Binding Path="CurrentUser.AvatarUrl" FallbackValue="./Icons/questionMark.png" />
                            </ImageBrush.ImageSource>
                        </ImageBrush>
                        
                    </Ellipse.Fill>
                </Ellipse>

                <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                    <Label Content="{Binding CurrentUser.Nickname}" 
                           Foreground="Black"
                           FontWeight="SemiBold"
                           Margin="0,-5,0,0"/>
                    <Label Content="{Binding CurrentUser.Signature}"
                           Foreground="Gray"
                           FontSize="10"
                           Margin="0,-8,0,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="2"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30.333"/>
                <RowDefinition Height="19.667"/>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#2F3136"
                    BorderThickness="0,0,0,0" Grid.RowSpan="2">
                <Grid HorizontalAlignment="Stretch"
                      Margin="8">

                    <Label Content="{Binding SelectedContact.Contactname}"
                           Foreground="Black"
                           FontWeight="Bold"
                           Margin="5,0,5,0"
                           VerticalAlignment="Center" Background="White"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Image Width="20" Height="20"
                               RenderOptions.BitmapScalingMode="Fant"
                               Margin="5,0,5,0"
                               Source="/Icons/phone.png"/>

                        <Image Width="20" Height="20"
                               RenderOptions.BitmapScalingMode="Fant"
                               Margin="5,0,5,0"
                               Source="/Icons/camera.png"/>
                    </StackPanel>

                </Grid>
            </Border>

            <ListView x:Name="MessageListView"
                      ItemsSource="{Binding SelectedContact.Messages}"
                      ScrollViewer.ScrollChanged="MessagesListView_ScrollChanged"
                      Background="#FFE5E5E5"
                      BorderThickness="0"
                      ItemContainerStyle="{StaticResource ChatItem}"
                      Margin="10,0,0,50"
                      Grid.Row="2"/>
            <Button x:Name="NewMessageButton"
                    Content="↓ 新消息"
                    Visibility="Collapsed"
                    Width="100" Height="30"
                    Background="LightBlue"
                    Foreground="White"
                    FontWeight="Bold"
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,465,0,0"
                    Click="NewMessageButton_Click"/>


            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="617*"/>
                    <ColumnDefinition Width="294*"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>

                <TextBox
                         Height="50"
                         Text="Message @Username"
                         Style="{StaticResource MessageBox}"
                         Margin="10,0,0,10"
                         Grid.ColumnSpan="3"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Grid.Column="2"
                            Margin="3,0,0,0">

                    <Image Source="/Icons/add.png"
                           Width="20" Height="20"
                           RenderOptions.BitmapScalingMode="Fant"
                           Margin="5,5,5,0"/>


                    <Image Source="/Icons/send.png"
                           Width="20" Height="20"
                           RenderOptions.BitmapScalingMode="Fant"
                           Margin="5,5,16,0"/>
                </StackPanel>

            </Grid>

        </Grid>
    </Grid>
</Window>
